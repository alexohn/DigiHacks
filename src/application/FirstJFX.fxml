<BorderPane prefHeight="450.0" prefWidth="537.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="application.FXController">
   <bottom>
      <Button fx:id="start_btn" mnemonicParsing="false" onAction="#startCamera" prefHeight="39.0" prefWidth="115.0" text="Start Camera" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="15.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
   <center>
      <ImageView fx:id="currentFrame" fitHeight="485.0" fitWidth="650.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <Button fx:id="record_start_btn" mnemonicParsing="false" onAction="#startRecording" prefHeight="39.0" prefWidth="115.0" text="Start Recording" BorderPane.alignment="CENTER_RIGHT">
		  <BorderPane.margin>
			  <Insets top="15.0" right="15.0" />
		  </BorderPane.margin>
	  </Button>
   </top>   
</BorderPane>
